<% include header %>

  <h1>
    Shorten your links.
  </h1>

  <p class="lead">
    Paste a full URL below and have it shortened!
  </p>

  <form action="/shorten" method="post">
    <div class="input-group">
      <input type="text" class="form-control form-control-lg" name="url" placeholder="Long URL Here" required>
      <span class="input-group-btn">
        <button class="btn btn-primary btn-lg" type="submit">Go!</button>
      </span>
    </div>
  </form>

  <% include footer %>